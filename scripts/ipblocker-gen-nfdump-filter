#!/usr/bin/python
from ipblocker import model
import sys

def save(s):
    if len(sys.argv) > 1:
        fn = sys.argv[1]
        f = open(fn, 'w')
    else:
        f = sys.stdout
    f.write(s)


def main():
    s = ''
    s += "host in ["
    for b in model.get_all_that_should_be_blocked():
        s+= b.ip + " "
    s += "]\n"
    save(s)
    model.engine.dispose()

if __name__ == "__main__":
    main()
